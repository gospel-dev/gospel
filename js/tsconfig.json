{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2019"],
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "f",
        "baseUrl": "src",
        "target": "es2016",
        "module": "es2015",
        "rootDir": "./src/",
        "outDir": "./dist/",
        //"outFile": "./build/solitude.js",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true
    }
}
